generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User metadata is stored in Supabase Auth (auth.users table)
// This table stores additional app-specific user data
// The id maps to auth.users.id via Supabase Auth
model User {
  id              String   @id @map("id")
  email           String   @unique @map("email")
  name            String?  @map("name")
  businessName    String?  @map("business_name")
  stripeAccountId String?  @unique @map("stripe_account_id")
  stripeConnected Boolean  @default(false) @map("stripe_connected")
  commissionRate  Float    @default(0.03) @map("commission_rate")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  products Product[]
  orders   Order[]
  plans    Plan[]
  coupons  Coupon[]

  @@map("User")
}

model Product {
  id                   String   @id @default(cuid()) @map("id")
  name                 String   @map("name")
  description          String?  @map("description")
  price                Float    @map("price")
  currency             String   @default("usd") @map("currency")
  imageUrl             String?  @map("image_url")
  type                 String   @default("one_time") @map("type")
  interval             String?  @map("interval")
  deliveryType         String   @default("none") @map("delivery_type")
  deliveryUrl          String?  @map("delivery_url")
  deliveryInstructions String?  @map("delivery_instructions")
  active               Boolean  @default(true) @map("active")
  bumpEnabled          Boolean  @default(false) @map("bump_enabled")
  bumpProduct          String?  @map("bump_product")
  bumpPrice            Float?   @map("bump_price")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  userId String @map("user_id")
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("Product")
}

model Order {
  id                    String   @id @default(cuid()) @map("id")
  amount                Float    @map("amount")
  currency              String   @default("usd") @map("currency")
  status                String   @default("pending") @map("status")
  customerEmail         String   @map("customer_email")
  customerName          String?  @map("customer_name")
  stripePaymentId       String?  @unique @map("stripe_payment_id")
  stripePaymentIntentId String?  @unique @map("stripe_payment_intent_id")
  stripeSessionId       String?  @unique @map("stripe_session_id")
  includedBump          Boolean  @default(false) @map("included_bump")
  platformFee           Float    @default(0) @map("platform_fee")
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  productId String  @map("product_id")
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    String  @map("user_id")
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Order")
}

model Coupon {
  id        String    @id @default(cuid()) @map("id")
  code      String    @unique @map("code")
  discount  Float     @map("discount")
  maxUses   Int       @default(0) @map("max_uses")
  usedCount Int       @default(0) @map("used_count")
  active    Boolean   @default(true) @map("active")
  expiresAt DateTime? @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Coupon")
}

model Plan {
  id            String         @id @default(cuid()) @map("id")
  name          String         @map("name")
  stripePriceId String?        @map("stripe_price_id")
  price         Float          @map("price")
  interval      String         @default("month") @map("interval")
  features      String?        @map("features")
  isActive      Boolean        @default(true) @map("is_active")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  userId        String         @map("user_id")
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptions Subscription[]

  @@map("Plan")
}

model Subscription {
  id                   String    @id @default(cuid()) @map("id")
  customerEmail        String    @map("customer_email")
  stripeSubscriptionId String?   @map("stripe_subscription_id")
  status               String    @default("active") @map("status")
  currentPeriodEnd     DateTime? @map("current_period_end")
  createdAt            DateTime  @default(now()) @map("created_at")

  planId String @map("plan_id")
  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("Subscription")
}

model WebhookLog {
  id        String   @id @default(cuid()) @map("id")
  eventId   String   @unique @map("event_id")
  eventType String   @map("event_type")
  payload   String   @map("payload")
  processed Boolean  @default(false) @map("processed")
  error     String?  @map("error")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("WebhookLog")
}
