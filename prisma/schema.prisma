generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ═══════════════════════════════════════════════
// CORE MODELS
// ═══════════════════════════════════════════════

model User {
  id              String   @id
  email           String   @unique
  name            String?
  businessName    String?
  stripeAccountId String?  @unique
  stripeConnected Boolean  @default(false)
  commissionRate  Float    @default(0.03)
  role            String   @default("merchant") // merchant | admin | superadmin
  plan            String   @default("free")     // free | pro | scale
  planExpiresAt   DateTime?
  suspended       Boolean  @default(false)
  suspendedReason String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  products     Product[]
  orders       Order[]
  plans        Plan[]
  coupons      Coupon[]
  licenseKeys  LicenseKey[]
  apiKeys      ApiKey[]

  @@map("User")
}

model Product {
  id                   String   @id @default(cuid())
  name                 String
  description          String?
  price                Float
  currency             String   @default("usd")
  imageUrl             String?
  type                 String   @default("one_time") // one_time | subscription | one_time_license | subscription_license
  interval             String?  // month | year (for subscriptions)
  deliveryType         String   @default("none")     // none | url | instructions | license
  deliveryUrl          String?
  deliveryInstructions String?
  downloadUrl          String?
  active               Boolean  @default(true)
  
  // Pricing type: fixed | pay_what_you_want
  pricingType          String   @default("fixed")
  minimumPrice         Float?   // For pay_what_you_want
  
  // Trial period (for subscriptions)
  trialEnabled         Boolean  @default(false)
  trialDays            Int?     // 7, 14, 30 days
  trialPrice           Float?   // $0 for free trial, or $1 for paid trial
  
  // Quantity limits (scarcity)
  quantityLimitEnabled Boolean  @default(false)
  quantityLimit        Int?     // Max number of sales
  quantitySold         Int      @default(0)  // Track how many sold
  
  // Geographic restrictions
  geoRestrictionEnabled Boolean @default(false)
  allowedCountries     String?  // JSON array of country codes ["US", "CA", "GB"]
  
  // Custom purchase email
  customEmailEnabled   Boolean  @default(false)
  customEmailSubject   String?
  customEmailBody      String?  // HTML content
  
  // Order Bump
  bumpEnabled          Boolean  @default(false)
  bumpProductId        String?
  bumpPrice            Float?   // Override price for bump (optional)
  
  // License config (for license products)
  licensePrefix       String?   // Custom prefix, default: EMBP
  maxActivations      Int       @default(1)
  licenseDurationDays Int?      // null = lifetime
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders      Order[]
  licenseKeys LicenseKey[]

  @@map("Product")
}

model Order {
  id                    String   @id @default(cuid())
  amount                Float
  currency              String   @default("usd")
  status                String   @default("pending") // pending | completed | failed | refunded | partially_refunded
  customerEmail         String
  customerName          String?
  stripePaymentId       String?  @unique
  stripePaymentIntentId String?  @unique
  stripeSessionId       String?  @unique
  includedBump          Boolean  @default(false)
  platformFee           Float    @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  productId   String
  product     Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  licenseKey  LicenseKey?

  @@map("Order")
}

// ═══════════════════════════════════════════════
// LICENSE KEY SYSTEM
// ═══════════════════════════════════════════════

model LicenseKey {
  id                 String    @id @default(cuid())
  key                String    @unique            // EMBP-XXXX-XXXX-XXXX-XXXX
  status             String    @default("active") // active | expired | revoked | suspended
  maxActivations     Int       @default(1)
  currentActivations Int       @default(0)
  expiresAt          DateTime?
  customerEmail      String
  customerName       String?
  lastVerifiedAt     DateTime?
  revokedAt          DateTime?
  revokedReason      String?
  metadata           String?   // JSON extra data
  createdAt          DateTime  @default(now())

  productId   String
  product     Product            @relation(fields: [productId], references: [id])
  orderId     String             @unique
  order       Order              @relation(fields: [orderId], references: [id])
  userId      String             // Merchant who sold this
  user        User               @relation(fields: [userId], references: [id])
  activations LicenseActivation[]

  @@index([key])
  @@index([customerEmail])
  @@index([userId])
  @@map("LicenseKey")
}

model LicenseActivation {
  id          String   @id @default(cuid())
  machineId   String
  machineName String?
  ipAddress   String?
  userAgent   String?
  isActive    Boolean  @default(true)
  activatedAt DateTime @default(now())
  lastSeenAt  DateTime @default(now())

  licenseId String
  license   LicenseKey @relation(fields: [licenseId], references: [id], onDelete: Cascade)

  @@unique([licenseId, machineId])
  @@map("LicenseActivation")
}

// ═══════════════════════════════════════════════
// API KEYS (for merchant integrations)
// ═══════════════════════════════════════════════

model ApiKey {
  id        String    @id @default(cuid())
  name      String                                // "WordPress Plugin", "My App"
  key       String    @unique                     // embp_live_sk_xxxxx
  prefix    String    @default("embp_live_sk")    // For identification
  lastUsed  DateTime?
  expiresAt DateTime?
  active    Boolean   @default(true)
  scopes    String    @default("read,verify")     // read,write,verify,admin
  createdAt DateTime  @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([key])
  @@map("ApiKey")
}

// ═══════════════════════════════════════════════
// PLATFORM ADMIN
// ═══════════════════════════════════════════════

model AuditLog {
  id        String   @id @default(cuid())
  action    String                           // user.suspend, license.revoke, order.refund
  targetType String                          // user, order, license, product
  targetId  String
  details   String?                          // JSON
  adminId   String                           // Who did this
  adminEmail String
  ipAddress String?
  createdAt DateTime @default(now())

  @@index([adminId])
  @@index([targetType, targetId])
  @@map("AuditLog")
}

model PlatformMetric {
  id          String   @id @default(cuid())
  date        DateTime @unique
  totalGmv    Float    @default(0)
  totalFees   Float    @default(0)
  newUsers    Int      @default(0)
  newOrders   Int      @default(0)
  activeUsers Int      @default(0)
  totalLicenses Int    @default(0)
  createdAt   DateTime @default(now())

  @@map("PlatformMetric")
}

// ═══════════════════════════════════════════════
// EXISTING MODELS
// ═══════════════════════════════════════════════

model Coupon {
  id        String    @id @default(cuid())
  code      String    @unique
  discount  Float
  maxUses   Int       @default(0)
  usedCount Int       @default(0)
  active    Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Coupon")
}

model Plan {
  id            String         @id @default(cuid())
  name          String
  stripePriceId String?
  price         Float
  interval      String         @default("month")
  features      String?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptions Subscription[]

  @@map("Plan")
}

model Subscription {
  id                   String    @id @default(cuid())
  customerEmail        String
  stripeSubscriptionId String?
  status               String    @default("active")
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())

  planId String
  plan   Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("Subscription")
}

model WebhookLog {
  id        String   @id @default(cuid())
  eventId   String   @unique
  eventType String
  payload   String
  processed Boolean  @default(false)
  error     String?
  createdAt DateTime @default(now())

  @@map("WebhookLog")
}
